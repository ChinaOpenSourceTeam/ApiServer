<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >  
<mapper namespace="com.chinaopensource.apiserver.system.user.mapper.UserMapper" >

	<select id="findByPhone" parameterType="java.lang.String" resultType="com.chinaopensource.apiserver.system.user.data.User" >
		select * from user where phone = #{phone}
	</select>

	<select id="findByEmail" parameterType="java.lang.String" resultType="com.chinaopensource.apiserver.system.user.data.User">
		select * from user where email = #{email}
	</select>

	<select id="findUserByVerificationCode" parameterType="java.lang.String" resultType="com.chinaopensource.apiserver.system.user.data.User">
		select * from use
		where verification_code = #{verificationCode}
	</select>

	<update id="updateStatus" >
		update user
		set status = #{status}
		where id = #{id}
	</update>
</mapper>
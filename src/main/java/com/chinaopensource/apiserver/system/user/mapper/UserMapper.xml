<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >  
<mapper namespace="com.chinaopensource.apiserver.system.user.mapper.UserMapper"  >

	<select id="findUserById" resultType="User"
			parameterType="java.lang.Integer" >
		select * from user where id = #{id}
	</select>

	<select id="findByPhone" parameterType="java.lang.String"
			resultType="User" >
		select * from user where phone = #{phone}
	</select>

	<select id="findByEmail" parameterType="java.lang.String"
			resultType="User">
		select * from user where email = #{email}
	</select>

	<select id="findUserByVerificationCode" parameterType="java.lang.String"
			resultType="User">
		select * from use
		where verification_code = #{verificationCode}
	</select>

	<select id="findAllUser" >
		select * from user where delete_flag != 1
	</select>

	<update id="updateStatus" >
		update user
		set status = #{status}
		where id = #{id}
	</update>

	<insert id="save" parameterType="User" >
	</insert>

	<update id="delete" parameterType="java.lang.Integer">
		update user set  delete_flag = 1 where id = #{id}
	</update>
</mapper>